  .tlBanner.Height = .PictureBox1.Height
  '.tvPlan.Width = MdlCore.iLeftWidth
   .Width = 800
   .Height = 600
  
END WITH 

iWidth = 0
FMain.tvPlan.MoveFirst()
 REPEAT 
 FMain.tvPlan.Item.Expanded = TRUE
