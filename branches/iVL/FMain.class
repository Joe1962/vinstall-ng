PUBLIC SUB Form_Open()
DIM iImg AS Image
DIM iWidth AS Integer








IF NOT FrmCurr OR FrmCurr = "" THEN FrmCurr = FrmSelISO



ME.Maximized = TRUE
frmInit = MdlCore.frmInit
'MdlCore.LOCK_GUI
'frmInit = FrmLangSel
'MdlCore.LOCK_GUI()
