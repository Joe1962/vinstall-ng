PictureBox1.Background = Color.SelectedBackground
PictureBox1.Stretch = TRUE
MdlCore.PREPARE_INSTALL_LAYOUT



WITH ME
  .btback.Enabled = FALSE
  .btback.ForeColor = Color.Gray
  .Frame1.BackColor = Color.Transparent
