PUBLIC SUB Form_Open()

  WITH ME
    .tlBanner.Text = "Setup is about to begin installing " & ClsGlobal.DISTRO & Space(1)&
    ClsGlobal.VERSION & " to your system. Please verify that the information below is " &
    "correct and click \"" & FMain.btnext.Text & "\" to continue. If you need to make" &
    " changes to your settings, click the \"" & FMain.btback.Text & "\" button."
    .tlBanner.Adjust
    .tlSummary.Adjust
  END WITH 

END

PUBLIC SUB Form_Resize()

  WITH ME
    .tlBanner.Width = .ClientWidth - 4
    .tlSummary.Move(.tlBanner.Left, .tlBanner.top + .tlBanner.Height + 4, .tlBanner.Width, .ClientH - 16)
  END WITH 

END
