PUBLIC SUB Form_Open()

  WITH ME
    .tlbanner.Text = "Select your indivirual packages to install. <br>To install them all, just click next"
    .tlbanner.Adjust
    '.tlbanner.Border = Border.Plain
    '.tlbanner.Width = MdlObjSizer.get_object_width(.tlbanner.Text)
    
  END WITH 
  FMain.FrmCurr = ME
  FMain.btback.Enabled = TRUE
  FMain.tvPlan["Prep2"].Picture = MdlCore.sNowPic
  FMain.tvPlan["Prep2"].Selected = TRUE
FMain.btback.ForeColor = Color.Black
  MdlPkgSel.LIST_PACKAGE_SELECTION()
END

PUBLIC SUB Form_Resize()

  WITH ME
    .tlbanner.Width = .ClientWidth - 16
    .scrPkgs.Move(.tlbanner.Left, .tlbanner.top + (.tlbanner.Height * 1.5), .tlbanner.Width - 4, .ClientHeight - (.tlbanner.Height * 4)) ', .tlbanner.Width - 8, .ClientHeight - .tlbanner.height - 8)
    
  END WITH   

END

PUBLIC SUB Form_Show()
  WITH ME
    .tlbanner.Text = "Select your indivirual packages to install. <br>To install them all, just click next"
    .tlbanner.Adjust
    '.tlbanner.Border = Border.Plain
    '.tlbanner.Width = MdlObjSizer.get_object_width(.tlbanner.Text)
    
  END WITH 
  FMain.FrmCurr = ME
  MdlPkgSel.LIST_PACKAGE_SELECTION()
  

END

PUBLIC SUB scrPkgs_MouseDown()

  

END

PUBLIC SUB Form_Hide()

  FMain.tvPlan["Prep2"].Picture = MdlCore.sDonePic

END
