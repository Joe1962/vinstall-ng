PUBLIC SUB Form_Resize()

  WITH ME
    .tlBanner.Width = .ClientW - 4
    '.svWinDrives.Resize(.ClientWidth - 4, .ClientHeight - (.tlBanner.Width * 1.5))
    .svWinDrives.Move(.tlBanner.Left, .tlBanner.top + (.tlBanner.Height + 4), .tlBanner.Width - 20, .ClientH - (.tlbanner.height * 2))
    
  END WITH 

END

