PUBLIC SUB PERFORM_FULL_INSTALL()
        
  DIM iret AS Integer  
  ClsGlobal.sTargetMnt = "/mnt/target"
  
  WITH FMain
      .tvPlan["Inst1"].Selected = TRUE
      .tvPlan["Inst1"].Picture = MdlCore.sNowPic
      .tvPlan["Inst0"].Picture = MdlCore.sDonePic
    END WITH   
  
