PRIVATE arrStaticOb AS object[]

PUBLIC SUB Form_Open()
DIM obj AS Object
arrStaticOb = NEW Object[] 

  WITH ME
    arrStaticOb.Add(.txtGatewayaddr)
    arrStaticOb.Add(.txtSubnetNask)
    arrStaticOb.Add(.tlGatewayAddr)
    arrStaticOb.Add(.tlSubNetMask)
    arrStaticOb.Add(.tlIpAddress)
    arrStaticOb.Add(.txtStaticIp)
  END WITH 
FOR EACH obj IN arrStaticOb
  obj.Visible = FALSE
NEXT   
    

END

PUBLIC SUB tlHostNameLbl_MouseDown()

  

END

PUBLIC SUB cbIpSettings_Click()
  DIM tb AS TextBox
  DIM tl AS TextLabel
  DIM obj AS Object
  IF ME.cbIpSettings.text = "STATIC" THEN 
    
      FOR EACH obj IN arrStaticOb
        obj.Visible = TRUE
      NEXT
  
  ELSE 
    FOR EACH obj IN arrStaticOb
      obj.Visible = FALSE
    NEXT 
  END IF
  

END
