PUBLIC SUB LIST_OPTIONAL_BULKS()
  
  DIM sLine, sFile AS String '= File.Load("/mnt/source/veclinux/SETUP.CONF")
  DIM sArr AS String[]
  DIM i, irow AS Integer
  DIM sDesc AS String
  
  IF Exist("/mnt/source/veclinux/SETUP.CONF") THEN 
    sFile = File.Load("/mnt/source/veclinux/SETUP.CONF")
    sArr = Split(sFile, "\n")
  ELSE 
  END IF
  irow = 2
  FOR EACH sLine IN Dir("/mnt/source/veclinux/")
    IF sLine LIKE "SETUP.CONF" THEN 
    ELSE 
      INC gvBulkSel.Rows.Count
      gvBulkSel[irow, 1].Text = Trim(sLine)
      
      gvBulkSel[irow, 0].Picture = picYes ' enabled by default
      SHELL "grep \"" & sLine & "\" /mnt/source/veclinux/SETUP.CONF | cut -f 3 -d \':\'" TO sDesc
      'Message(sDesc)
      sDesc = Replace(sDesc, "\'", "")
      sDesc = Replace(sDesc, "\"", "")
      gvBulkSel[irow, 2].Text = Trim(sDesc)
