PUBLIC SUB CLEANUP_TABSTRIP()
DIM i AS Integer

    ' will remove blank tabstrip
      FOR i = 0 TO ME.tsLIloTabs.Count
        tsLIloTabs.Index = i
          IF tsLIloTabs.Text = "" THEN 
            tsLIloTabs[i].Delete
            RETURN 
          END IF
          
      NEXT 
  
  
END

PUBLIC SUB list_video_modes()
  
  WITH ME.cbVideoRes
      .Add(("Standard"))
      .Add(("Bootsplash Med"))
      .Add(("Bootsplash High"))
      .Add(("Bootsplash Extra High"))
  END WITH 
      
  
END





