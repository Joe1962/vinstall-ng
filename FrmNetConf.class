PUBLIC SUB txtHostName_KeyRelease()
IF Key.Text THEN 
  IF Key.text LIKE "*[a-z]*" OR Key.text LIKE "*[A-Z]*" OR Key.text = "-" OR Key.Text = "." OR Key.Text LIKE "*[0-9]*" THEN 
    'Message("good")
  ELSE 
    IF Key.text <> "-" OR Key.Text <> "." THEN 
    txtHostName.Text = Left(txtHostName.Text, Len(txtHostName.Text) - 1)
    END IF
    'Message("Bad")
  END IF
END IF

END

