PUBLIC FUNCTION GET_CURRENT_HOST_NAME() AS String
  DIM sRes AS String
  DIM sDomain AS String
  DIM sHost AS String
  
    'SHELL "chroot " & ClsGlobal.sTargetMnt & " hostname" TO sRes
    'EXEC ["chroot " & ClsGlobal.sTargetMnt, "hostname"] TO sRes
    
    'IF sRes = "" THEN 
        sRes = "Vector.Linux.net"
     ' END IF


    sRes = Trim(sRes)
    IF InStr(sRes, ".") THEN 
      sHost = Left(sRes, InStr(sRes, ".") - 1)
      sDomain = Right(sRes, Len(sRes) - InStr(sRes, "."))
          ' set the default domain name
          FrmNetConf.tbDomain.Text = sDomain
      END IF
    
      
    RETURN Trim(sHost)
      
END


PUBLIC SUB Form_Open()
  DIM cb AS ComboBox
    FMain.FrmCurr = ME
    ME.tlHostNameLbl.Alignment = Align.Normal
    
  ' ' '   WITH FMain 
  ' ' '   .tvPlan["Conf3"].Picture = MdlCore.sDonePic
  ' ' '   .tvPlan["Conf2"].Picture = MdlCore.sDonePic
  ' ' '   .tvPlan["Conf4"].Picture = MdlCore.sNowPic
  ' ' '   .tvPlan["Conf4"].Selected = TRUE
  ' ' ' END WITH 

    ME.txtHostName.text = ME.GET_CURRENT_HOST_NAME()
      
    MdlNetConf.LIST_NETWORK_INTERFACES()
    'CATCH 
    cbUseManDNS.Value = FALSE
    tlBanner.text = "<h3>" & tlBanner.text & "</h3>"
   
    
  IF ERROR THEN Message(Error.text & "\n" & Error.where)
  
  WAIT 
    FOR EACH cb IN MdlNetConf.objCombos
      cb.Refresh
    NEXT 
'    ME.frmNetDevices.Text = Space(1) & ("Network Interfaces") & Space(1)
    FMain.btnext.Enabled = TRUE
    MdlCore.warn_status_off()
END


